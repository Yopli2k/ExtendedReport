{% import _self as macros %}
{% set currentView = fsc.getCurrentView() %}
{% set currentViewName = currentView.getViewName() %}
{% set formName = 'form' ~ currentViewName %}

<br/>

<form id="{{ formName }}" method="post">
    <input type="hidden" name="action"/>
    <input type="hidden" name="activetab" value="{{ currentViewName }}"/>
    <input type="hidden" name="loadfilter" value="{{ currentView.pageFilterKey }}"/>
    <input type="hidden" name="offset" value="{{ currentView.offset }}"/>
    <input type="hidden" name="order" value="{{ currentView.orderKey }}"/>
    <div class="container-fluid">
        <div class="row">
            {# -- Left buttons -- #}
            <div class="col">
                <ul class="nav nav-pills nav-pills-sm mb-3" id="{{ currentViewName }}Tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" name="ReportDataTab" data-view="{{ currentViewName }}" data-toggle="pill" href="#{{ currentViewName }}DataTab" role="tab" aria-controls="{{ currentViewName }}DataTab" aria-selected="true">
                            <i class="fas fa-table" aria-hidden="true"></i>
                            {{ i18n.trans("data") }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#{{ currentViewName }}SavedTab" role="tab" aria-controls="{{ currentViewName }}SavedTab" aria-selected="false">
                            <i class="fas fa-list" aria-hidden="true"></i>
                            {{ i18n.trans("predefined") }}
                        </a>
                    </li>
                </ul>
            </div>
            {# -- Row actions -- #}
            {% set row = currentView.getRow('actions') %}
            {% if row is not empty %}
                <div class="col">
                    {{ row.render(true) | raw }}
                </div>
            {% endif %}
            {# -- Right buttons -- #}
            <div class="col text-right">
                <div id="{{ currentViewName }}Buttons" class="form-group">
                    {% if currentView.orderOptions is not empty %}
                        {{ macros.sortButton(currentView) }}
                    {% endif %}
                    {{ macros.showButton(fsc, currentView, i18n) }}
                </div>
            </div>
        </div>
        <div class="tab-content" style="margin-top: 15px;">
            <div class="tab-pane show active" id="{{ currentViewName }}DataTab" role="tabpanel" aria-labelledby="{{ currentViewName }}DataTab">
                {# -- Filters -- #}
                {% set divFiltersStyle = currentView.showFilters ? '' : 'display: none;' %}
                <div id="form{{ currentView.getViewName() }}Filters" class="row" style="{{ divFiltersStyle }}">
                    {% for filterName, filter in currentView.filters %}
                        {{ filter.render() | raw }}
                    {% endfor %}
                </div>
                {# -- Row header -- #}
                {% set row = currentView.getRow('header') %}
                {% if row is not empty %}
                    <div class="row">
                        {% set row = currentView.getRow('header') %}
                        {{ row.render(currentView.getViewName(), 'listViewSetAction', fsc) | raw }}
                    </div>
                {% endif %}
                {# -- Data -- #}
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    {% for column in currentView.getColumns() %}
                                        {{ column.tableHeader(fsc.user) | raw }}
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                {% set numcolumns = currentView.getColumns() | length %}
                                {% for model in currentView.cursor %}
                                    {% set rowStatus = currentView.getRow('status') %}
                                    {% set trClass = rowStatus.trClass(model) %}
                                    {% if view.templateData is empty %}
                                        <tr class="{{ trClass }}">
                                            {% for column in currentView.getColumns() %}
                                                {{ column.tableCell(model, fsc.user) | raw }}
                                            {% endfor %}
                                        </tr>
                                    {% else %}
                                        {% set trId = currentViewName ~ model.getMasterID() %}
                                        <tr class="clickableRow {{ trClass }}" data-toggle="collapse" data-target="#{{ trId }}" aria-expanded="false" aria-controls="{{ trId }}">
                                            {% for column in currentView.getColumns() %}
                                                {{ column.tableCell(model, fsc.user) | raw }}
                                            {% endfor %}
                                        </tr>
                                        <tr id="{{ trId }}" class="collapse multi-collapse">
                                            <td colspan="{{ numcolumns }}">
                                                {{ include(view.templateData) }}
                                                <br>
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% else %}
                                    <tr class="table-warning">
                                        <td colspan="{{ numcolumns }}">{{ i18n.trans('no-data') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="{{ currentViewName }}SavedTab" role="tabpanel" aria-labelledby="{{ currentViewName }}SavedTab">
                {# TODO: Esta es la lista de filtros grabados #}
            </div>
        </div>
    </div>
    <br/>
    {# -- Row footer -- #}
    <div class="container-fluid">
        <div class="row">
            {% set row = currentView.getRow('footer') %}
            {{ row.render(currentViewName, 'listViewSetAction', fsc) | raw }}
        </div>
    </div>
</form>

{# -- Modals -- #}
{% for group in currentView.getModals() %}
    {{ group.modal(currentView.model, fsc.user, currentView.getViewName()) | raw }}
{% endfor %}

{# -- Macros -- #}
{% macro sortButton(currentView) %}
    <div class="btn-group">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            {% set icon = (currentView.orderOptions[currentView.orderKey]['type'] == 'ASC') ? 'fas fa-arrow-up' : 'fas fa-arrow-down' %}
            <i class="{{ icon }} fa-fw" aria-hidden="true"></i>
            {{ currentView.orderOptions[currentView.orderKey]['label'] }}
            <span class="caret"></span>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            {% for key, orderby in currentView.orderOptions %}
                {% set activeClass = (currentView.orderKey == key) ? ' active' : '' %}
                {% set icon = (orderby.type == 'ASC') ? 'fas fa-arrow-up' : 'fas fa-arrow-down' %}
                <a class="dropdown-item{{ activeClass }}" href="#" onclick="listViewSetOrder('{{ currentView.getViewName() }}', '{{ key }}');">
                    <i class="{{ icon }} fa-fw" aria-hidden="true"></i> {{ orderby.label }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endmacro %}

{% macro showButton(fsc, currentView, i18n) %}
    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-success" onclick="listViewSetAction('{{ currentView.getViewName() }}', 'load');">
            <i class="far fa-list-alt fa-fw" aria-hidden="true"></i>
            {{ i18n.trans('view-report') }}
        </button>
        <button type="button" class="btn btn-sm btn-success dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">{{ i18n.trans('more') }}</span>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            {% for key, option in fsc.exportManager.options() %}
                <button type="button" class="dropdown-item" onclick="listViewPrintAction('{{ currentView.getViewName() }}', '{{ key }}');">
                    <i class="{{ option.icon }} fa-fw" aria-hidden="true"></i>
                    {{ i18n.trans(option.description) }}
                </button>
            {% endfor %}
        </div>
    </div>
{% endmacro %}
