{% extends "Master/MenuBghTemplate.html.twig" %}

{% set pageData = fsc.getPageData() %}

{% block bodyHeaderOptions %}
    {{ parent() }}
    <div class="container-fluid mb-3 d-print-none">
        <div class="row">
            <div class="col-12 text-right">
                <h1 class="h4 mb-0 d-none d-md-inline-block">
                    {% set title = i18n.trans(fsc.getPageData()['title']) | capitalize %}
                    {{ title }}<i class="{{ fsc.getPageData()['icon'] }} ml-3" aria-hidden="true"></i>
                </h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ parent() }}

    <script>
        function printAction(value) {
            $("#formReportTest :input[name=\"action\"]").val(value);
            $("#formReportTest").submit();
        }
    </script>
    <form id="formReportTest" method="post">
        <input type="hidden" name="action" value="" />
        <div class="container-fluid">
            <div class="card border-primary shadow mb-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12">
                            <a class="btn btn-lg btn-primary" href="#" role="button" onclick="printAction('print-test');">
                                <i class="fas fa-print fa-fw" aria-hidden="true"></i>
                                <span class="d-none d-sm-inline-block">{{ i18n.trans('print-test') }}</span>
                            </a>
                            <a class="btn btn-lg btn-info" href="#" role="button" onclick="printAction('portrait-test');">
                                <i class="fas fa-print fa-fw" aria-hidden="true"></i>
                                <span class="d-none d-sm-inline-block">{{ i18n.trans('portrait-test') }}</span>
                            </a>
                            <a class="btn btn-lg btn-info" href="#" role="button" onclick="printAction('landscape-test');">
                                <i class="fas fa-print fa-fw" aria-hidden="true"></i>
                                <span class="d-none d-sm-inline-block">{{ i18n.trans('landscape-test') }}</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}