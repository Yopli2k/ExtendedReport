<report>
    <config>
        <page type="A4" orientation="portrait" />
        <font type="Arial" size="12" />
        <default group="main" alter="other" />
    </config>

    <group name="main">
        <header height="80">
            <column posx="20" posy="45" width="50" height="10">
                <widget
                    type="label"
                    translate="true"
                    bold="true"
                    size="13"
                    value="code"
                />
            </column>
            <column posx="80" posy="45" width="350" height="10">
                <widget
                    type="label"
                    translate="true"
                    bold="true"
                    size="13"
                    value="description"
                />
            </column>
            <column posx="380" posy="45" width="60" height="10">
                <widget
                    type="label"
                    translate="true"
                    bold="true"
                    align="center"
                    size="13"
                    value="date"
                />
            </column>
            <column posx="460" posy="45" width="80" height="10">
                <widget
                    type="label"
                    translate="true"
                    bold="true"
                    align="right"
                    size="13"
                    value="total"
                />
            </column>
            <column posx="10" posy="60" width="550" height="1">
                <widget type="line" />
            </column>
        </header>
        <detail height="20">
            <column posx="20" width="50" height="15">
                <widget
                    type="label"
                    fieldname="id"
                />
            </column>
            <column posx="80" width="250" height="15">
                <widget
                    type="label"
                    italic="true"
                    fieldname="name"
                />
            </column>
            <column posx="380" width="60" height="15">
                <widget
                    type="label"
                    align="center"
                    fieldname="date"
                />
            </column>
            <column posx="460" width="80" height="15">
                <widget
                    type="label"
                    align="right"
                    fieldname="total"
                />
            </column>
        </detail>
        <footer height="100">

        </footer>
    </group>
</report>
